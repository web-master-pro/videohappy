.popup-portfolio
    display block
    width 100%
    max-width 1100px
    background-color white
    position relative
    margin 20px auto
    padding 50px 20px 20px
    +above(768px)
        padding 65px 40px 40px
    +above(1200px)
        padding 65px 140px 45px

    &__video
        display block
        width 100%
        margin 0 auto 50px
        iframe
            border none

    &__data
        width 100%
        display flex
        flex-flow row wrap
        margin 0 0 50px

    &__info
        flex 1 1 100%
        display block
        padding-right 20px
        margin-bottom 20px
        +above(480px)
            flex 1 1 45%
            margin-bottom 0
        +above(800px)
            flex 1 1 40%

    &__detailes
        color #777
        font()
        font-size 14px
        line-height 1
        text-transform uppercase
        margin 0 0 7px

    &__row
        display flex
        flex-flow row nowrap
        max-width 300px
        padding 7px 0 5px
        border-top 1px solid #ededed
        &:last-child
            border-bottom 1px solid #ededed

    &__caption
        flex 0 0 60px
        display block
        color #3b3b3b
        font(Medium)
        font-size 11px
        line-height 1
        text-transform uppercase
        padding-right 1em
        margin 0

    &__value
        color #777
        font()
        font-size 11px
        text-transform uppercase
        line-height 1
        margin 0

    &__descr
        flex 1 1 100%
        display block
        +above(480px)
            flex 1 1 55%
        +above(800px)
            flex 1 1 60%

    &__text
        color #777
        font()
        font-size 16px
        line-height 1.2
        margin 0

    &__appeal
        display block
        max-width 400px
        color #39c
        font(Medium)
        font-size 16px
        line-height 1.2
        text-transform uppercase
        text-align center
        margin 0 auto 1.2em

    &__btn-wrapper
        display block
        width 100%
        text-align center

    &__button
        display inline-block
        color #fffefe
        font(Medium)
        font-size 16px
        line-height 1
        background-color #8dc8f5
        text-transform uppercase
        text-decoration none
        border none
        outline none
        cursor pointer
        padding 15px
        margin 0
        &:hover
            background-color #8cd9ff
            background-image linear-gradient(184deg, #8cd9ff 0%, #3fbaf7 100%)
            text-decoration none

    &__close-btn
        display inline-block
        border none
        outline none
        background none
        opacity 0.6
        color #8cd9ff
        font()
        font-size 12px
        line-height 1
        text-align center
        text-transform uppercase
        padding 0
        position absolute
        top 10px
        right 20px
        cursor pointer
        transition opacity .3s ease
        span
            font(Bold)
            font-size 30px
        &:hover
            opacity 1
        +above(480px)
            font-size 14px
            top 15px
            right 25px
            span
                font-size 40px


.popup-thankyou
    display block
    max-width 400px
    min-height 200px
    background-color white
    box-shadow 0 0 30px rgba(0, 0, 0, 0.3)
    padding 60px 15px 50px
    margin auto
    text-align center

    &__title
        color #49bcdf
        font(Extra)
        font-size 24px
        line-height 1.2
        text-align center
        text-transform uppercase
        margin 0 auto 1em
        +above(480px)
            font-size 30px
        +above(800px)
            font-size 34px
        +above(1000px)
            font-size 40px

    &__text
        color #2b2e31
        font()
        font-size 18px
        line-height 1.5
        text-align center
        margin 0 auto 1.5em
        +above(480px)
            font-size 24px

    &__button
        display inline-block
        border none
        outline none
        background-color #8cd9ff
        background-image linear-gradient(180deg, #8cd9ff 0%, #3fbaf7 100%)
        color #fffefe
        font(Medium)
        font-size 16px
        text-align center
        line-height 1
        text-transform uppercase
        padding 18px 30px
        margin 20px 0 0
        cursor pointer
        &:hover
            background-image linear-gradient(0deg, #8cd9ff 0%, #3fbaf7 100%)

.popup
    .mfp-close
        display none

.mfp-zoom-in .popup
    opacity 0
    transition all 0.2s ease-in-out
    transform scale(0.8)

.mfp-zoom-in.mfp-bg
    opacity 0
    transition all 0.3s ease-out

.mfp-zoom-in.mfp-ready .popup
    opacity 1
    transform scale(1)

.mfp-zoom-in.mfp-ready.mfp-bg
    opacity 0.8

.mfp-zoom-in.mfp-removing .popup
    transform scale(0.8)
    opacity 0

.mfp-zoom-in.mfp-removing.mfp-bg
    opacity 0
