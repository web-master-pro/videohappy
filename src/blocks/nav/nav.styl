.nav
    display block
    width 100%
    margin 0 auto
    background #466c7f
    background-color rgba(70,108,127,.9)
    padding 1px 0
    z-index 100
    min-height 40px
    +above(1000px)
        position absolute
        top 155px
        left 50%
        margin-left -65px
        max-width 130px
        background-color transparent
    &--fixed
        position fixed
        top 0
        left 0
        right 0
        +above(1000px)
            position fixed
            top 155px
            left 50%
            right auto
            margin-left -65px

    &__list
        width 100%
        list-style none
        padding 0
        margin 0
        display none
        position relative
        margin-top 40px
        +above(480px)
            display flex !important
            flex-flow row nowrap
            justify-content space-around
            margin-top 0
        +above(1000px)
            flex-direction column

    &__item
        flex 1 1 auto
        display block
        color #8cd9ff
        font()
        font-size 14px
        text-align center
        padding 0
        margin 0 auto

    &__link
        display block
        width 100%
        color #8cd9ff
        font()
        font-size 14px
        text-align center
        text-transform uppercase
        text-decoration none
        transition color .3s ease
        padding 20px 0
        +above(480px)
            font-size 12px
        +above(768px)
            font-size 14px

        &.active
        &:hover
            color white
            text-decoration none





