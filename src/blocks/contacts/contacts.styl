.contacts
    display block
    width 100%
    position relative

    &__in
        section-row()

    &__left
        section-left()
        display flex
        flex-flow row nowrap
        justify-content center
        align-items center

    &__mid
        section-mid()

    &__right
        section-right()
        order -1
        +above(800px)
            order 3

    &__box
        display block
        width 100%
        flex 0 1 auto
        padding 40px 20px
        margin 0 auto
        +above(480px)
            padding 40px 20px 40px 50px

    &__title
        color #3b3b3b
        font(Bold)
        font-size 18px
        line-height 1
        text-transform uppercase
        margin 0 0 30px
        +above(1200px)
            padding-left 65px

    &__subtitle
        color #39c
        font(Bold)
        font-size 12px
        line-height 1.2
        text-transform uppercase
        margin 0 0 20px

    &__phone
        display block
        color #3b3b3b
        font(Medium)
        font-size 16px
        line-height 1
        padding-left 30px
        text-decoration none
        position relative
        margin 0 0 30px
        &:hover
            color @color
            text-decoration none
        &::before
            content ""
            sprite($icon_contacts_phone)
            position absolute
            top -1px
            left 0
        +above(1200px)
            display inline-block
            margin 0 70px 30px 0

    &__skype
        display block
        color #3b3b3b
        font(Medium)
        font-size 16px
        line-height 1
        padding-left 30px
        position relative
        margin 0 0 30px
        &::before
            content ""
            sprite($icon_contacts_skype)
            position absolute
            top -1px
            left 0
        +above(1200px)
            display inline-block
            margin 0 70px 30px 0

    &__email
        display block
        color #3b3b3b
        font(Medium)
        font-size 16px
        line-height 1
        padding-left 30px
        text-decoration none
        position relative
        margin 0 0 30px
        &:hover
            color @color
            text-decoration none
        &::before
            content ""
            sprite($icon_contacts_email)
            position absolute
            top -1px
            left 0
        +above(1200px)
            display inline-block
            margin 0 70px 30px 0


.form-contacts
    display block
    width 100%
    max-width 300px
    margin 0
    +above(480px)
        max-width 100%

    &__row
        display flex
        flex-flow row wrap
        +above(480px)
            flex-flow row nowrap

    &__left
        flex 1 1 100%
        +above(480px)
            flex 0 1 190px
            margin-right 25px

    &__right
        flex 1 1 100%
        +above(480px)
            flex 0 1 190px

    &__button
        display block
        width 214px
        height 36px
        border none
        outline none
        background-color #8cd9ff
        background-image linear-gradient(184deg, #8cd9ff 0%, #3fbaf7 100%)
        color #fffefe
        font(Medium)
        font-size 16px
        text-align center
        text-transform uppercase
        margin 20px 0 0




.social-menu
    list-style none
    padding 0
    margin 0
    display flex
    flex-flow row wrap

    &__item
        display block
        flex 1 1 33.3333%
        height 110px
        background-color #fff
        position relative
        &:nth-child(1)
            border-top 1px solid #a0a0a0
            border-right 1px solid #a0a0a0
            border-bottom 1px solid #a0a0a0
            border-left 1px solid #fff
        &:nth-child(2)
            border-top 1px solid #a0a0a0
            border-right 1px solid #a0a0a0
            border-bottom 1px solid #a0a0a0
            border-left none
        &:nth-child(3)
            border-top 1px solid #a0a0a0
            border-right 1px solid #fff
            border-bottom 1px solid #a0a0a0
            border-left none
        &:nth-child(4)
            border-top none
            border-right 1px solid #a0a0a0
            border-bottom 1px solid #a0a0a0
            border-left 1px solid #fff
        &:nth-child(5)
            border-top none
            border-right 1px solid #a0a0a0
            border-bottom 1px solid #a0a0a0
            border-left none
        &:nth-child(6)
            border-top none
            border-right 1px solid #fff
            border-bottom 1px solid #a0a0a0
            border-left none


        +above(480px)
            height 200px
        +above(800px)
            flex 1 1 50%
            &:nth-child(1)
                border-top 1px solid #a0a0a0
                border-right 1px solid #a0a0a0
                border-bottom 1px solid #a0a0a0
                border-left 1px solid #a0a0a0
            &:nth-child(2)
                border-top 1px solid #a0a0a0
                border-right 1px solid #a0a0a0
                border-bottom 1px solid #a0a0a0
                border-left none
            &:nth-child(3)
                border-top none
                border-right 1px solid #a0a0a0
                border-bottom 1px solid #a0a0a0
                border-left 1px solid #a0a0a0
            &:nth-child(4)
                border-top none
                border-right 1px solid #a0a0a0
                border-bottom 1px solid #a0a0a0
                border-left none
            &:nth-child(5)
                border-top none
                border-right 1px solid #a0a0a0
                border-bottom 1px solid #a0a0a0
                border-left 1px solid #a0a0a0
            &:nth-child(6)
                border-top none
                border-right 1px solid #a0a0a0
                border-bottom 1px solid #a0a0a0
                border-left none

    &__link
        display block
        position absolute
        top -1px
        right -1px
        bottom -1px
        left -1px
        text-decoration none
        color #3b3b3b
        transition all .3s ease
        &::before
            opacity 1
            transition opacity .3s ease
            content ""
            position absolute
            top 50%
            left 50%
            transform-origin center center
            transform scale(.8)
            +above(480px)
                transform none
        &--vk::before
            sprite($icon_social_vk)
            margin-top -17px
            margin-left -30px
        &--youtube::before
            sprite($icon_social_youtube)
            margin-top -25px
            margin-left -22px
        &--facebook::before
            sprite($icon_social_facebook)
            margin-top -29px
            margin-left -14px
        &--vimeo::before
            sprite($icon_social_vimeo)
            margin-top -16px
            margin-left -55px
        &--instagram::before
            sprite($icon_social_instagram)
            margin-top -20px
            margin-left -20px
        &--ok::before
            sprite($icon_social_ok)
            margin-top -25px
            margin-left -14px

        &::after
            opacity 0
            transition opacity .3s ease

        &:hover
            color white
            background #8cd9ff
            &::before
                opacity 0
            &::after
                opacity 1
                content ""
                position absolute
                top 50%
                left 50%
                transform-origin center center
                transform scale(.8)
                +above(480px)
                    transform none
        &--vk:hover::after
            sprite($icon_social_vk_hover)
            margin-top -17px
            margin-left -30px
        &--youtube:hover::after
            sprite($icon_social_youtube_hover)
            margin-top -25px
            margin-left -22px
        &--facebook:hover::after
            sprite($icon_social_facebook_hover)
            margin-top -29px
            margin-left -14px
        &--vimeo:hover::after
            sprite($icon_social_vimeo_hover)
            margin-top -16px
            margin-left -55px
        &--instagram:hover::after
            sprite($icon_social_instagram_hover)
            margin-top -20px
            margin-left -20px
        &--ok:hover::after
            sprite($icon_social_ok_hover)
            margin-top -25px
            margin-left -14px


