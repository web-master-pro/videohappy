.portfolio

    &__in
        section-row()
        background-color #fff

    &__left
        section-left()

    &__mid
        section-mid()

    &__right
        section-right()

    &__menu
        display block
        width 100%
        max-width 500px
        list-style none
        padding 0
        margin 0 auto

    &__item
        display block
        width 100%
        padding 0
        margin 0
        overflow hidden
        position relative

    &__img
        display block
        width 100%
        height auto
        margin 0 auto
        transition all .5s ease
        transform-origin center center
        ^[0]__item:hover &
            transform scale(1.02)

    &__cover
        display flex
        flex-flow row nowrap
        align-items center
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        margin 0
        z-index 10
        opacity 1
        transition opacity .5s ease
        ^[0]__item:hover &
            opacity 0

    &__headers
        flex 1 1 auto
        text-align left
        padding 0 20px
        ^[0]__menu--right &
            +above(800px)
                text-align right

    &__type
        color #fffefe
        font()
        font-size 14px
        line-height 1
        margin 0 0 .625em
        +above(480px)
            font-size 16px

    &__caption
        color #fffefe
        font(Medium)
        font-size 20px
        line-height 1
        text-transform uppercase
        margin 0
        +above(480px)
            font-size 24px

    &__overlay
        display flex
        flex-flow row nowrap
        align-items center
        padding 0 20px 0 0
        background-color rgba(0,0,0,.5)
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        z-index 20
        opacity 0
        transition opacity .5s ease
        +above(1200px)
            padding 0 30px 0 0
        ^[0]__item:hover &
            opacity 1
        ^[0]__menu--right &
            +above(800px)
                flex-flow row-reverse nowrap
                padding 0 0 0 20px
            +above(1200px)
                padding 0 0 0 30px

    &__descr
        flex 1 1 auto
        padding 0 20px
        color white
        +above(1200px)
            padding 0 30px

    &__text
        color #fefefe
        font()
        font-size 10px
        line-height 1.2
        margin .5em 0
        +above(480px)
            font-size 14px


    &__button
        display inline-block
        color #fffefe
        font(Medium)
        font-size 10px
        line-height 1
        background-color rgba(140,217,255,.8)
        border none
        outline none
        cursor pointer
        padding 15px
        margin 0
        &:hover
            background-color #8cd9ff
            background-image linear-gradient(184deg, #8cd9ff 0%, #3fbaf7 100%)
        +above(480px)
            font-size 14px
